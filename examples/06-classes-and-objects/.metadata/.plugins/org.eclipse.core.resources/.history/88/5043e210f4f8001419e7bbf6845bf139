
public class Animal {
	
	String name;
	int age;
	
	public Animal(){
		this.name = "";
		this.age = 0;
	}
	
	public Animal(String name, int age){
		this.name = name;
		this.age = age;
	}
	
	public void greet(){
		System.out.println("Hello I am " + this.name + "!");
		System.out.println("Hello I am " + this.age + " years old!");
	}

}
