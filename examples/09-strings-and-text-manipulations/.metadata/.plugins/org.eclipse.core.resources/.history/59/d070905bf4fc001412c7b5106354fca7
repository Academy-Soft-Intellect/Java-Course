package searching;

public class SearchingInStrings {

	public static void main(String[] args) {
		
		//demostration - index of
		String javaLang = "Where is Java? Does Java present in the sentance?";
		
		int javaIndex = javaLang.indexOf("Java");
		
		System.out.format("The word: Java is located with index %d \n", javaIndex);
		
		int secondJavaIndex = javaLang.indexOf("Java", javaIndex);
		
		System.out.format("The word: Java is located with index %d \n", secondJavaIndex);
		
		//starts with
		
		String example = "Java Programming";
		
		boolean startsWith = example.startsWith("Java");//Ð¿Ñ€Ð¾Ð²ÐµÑ€Ñ?Ð²Ð° Ð´Ð°Ð»Ð¸ Ð½Ð¸Ð·Ð° Ð·Ð°Ð¿Ð¾Ñ‡Ð²Ð° Ñ? Java
		
		System.out.format("Ð˜Ð·Ñ€Ð°Ð·ÑŠÑ‚ Ð·Ð°Ð¿Ð¾Ñ‡Ð²Ð° Ñ? Java: %s \n", startsWith);
		
		//ends with
		
		String coding = "I love coding";
		
		boolean endsWith = coding.endsWith("coding");//Ð¿Ñ€Ð¾Ð²ÐµÑ€Ñ?Ð²Ð° Ð´Ð°Ð»Ð¸ Ð·Ð°Ð²ÑŠÑ€ÑˆÐ²Ð° Ñ? coding
		
		System.out.format("Ð˜Ð·Ñ€Ð°Ð·ÑŠÑ‚ Ð·Ð°Ð²ÑŠÑ€ÑˆÐ²Ð° Ñ? coding: %s \n", endsWith);
		
		//contains
		 
		String oop = "Java is object oriented language";
		
		boolean contains = oop.contains("object");//Ð¿Ñ€Ð¾Ð²ÐµÑ€Ñ?Ð²Ð° Ð´Ð°Ð»Ð¸ Ñ?ÑŠÐ´ÑŠÑ€Ð¶Ð° object
		
		System.out.format("Ð˜Ð·Ñ€Ð°Ð·ÑŠÑ‚ Ñ?ÑŠÐ´ÑŠÑ€Ð¶Ð° object: %s \n", contains);
		
		
		

	}

}
