
public class SearchingInStrings {

	public static void main(String[] args) {
		
		//index of
		String javaLang = "Къде се намира Java? Има ли въобще Java в изречението?";
		
		int javaIndex = javaLang.indexOf("Java");
		
		System.out.format("Думата Java се намира на %d индекс \n", javaIndex);
		
		int secondJavaIndex = javaLang.indexOf("Java", 16);
		
		System.out.format("Думата Java се намира и на %d индекс \n", secondJavaIndex);
		
		//starts with
		
		String example = "Java Programming";
		
		boolean startsWith = example.startsWith("Java");//проверява дали низа започва с Java
		
		System.out.format("Изразът започва с Java: %s \n", startsWith);
		
		//ends with
		
		String coding = "I love coding";
		
		boolean endsWith = coding.endsWith("coding");//проверява дали завършва с coding
		
		System.out.format("Изразът завършва с coding: %s \n", endsWith);
		
		//contains
		 
		String oop = "Java is object oriented language";
		
		boolean contains = oop.contains("object");//проверява дали съдържа object
		
		System.out.format("Изразът съдържа object: %s \n", contains);
		
		
		

	}

}
