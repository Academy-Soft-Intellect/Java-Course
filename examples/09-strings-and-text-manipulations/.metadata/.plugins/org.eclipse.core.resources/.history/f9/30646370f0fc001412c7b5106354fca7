package comparison;

public class StringEquals {

	public static void main(String[] args) {
		
		String first = "I am writing in Java!";
		
		String second = "I am" + " writing in " + "Java!";
		
		String third = second;
		
		boolean refComparisonFirstSecond = first == second;
		
		System.out.format("Reference comparison with ==: %s \n", refComparisonFirstSecond);
		
		boolean refComparisonSecondThird = second == third;
		
		System.out.format("Reference comparison with ==: %s \n", refComparisonSecondThird);
		
		boolean valueComparisonFirstSecond = first.equals(second);
		
		System.out.format("Value comparison with ==: %s \n", valueComparisonFirstSecond);
		
		boolean valueComparisonSecondThird = second.equals(third);
		
		System.out.format("Value comparison between second and third with ==: %s \n", valueComparisonFirstSecond);

	}
}
