public class MethodsPrimitiveType {
	public static void main(String[] args) {
		
	    int numberArg = 3;
	    System.out.println("the number before is: " + numberArg);
	    printNumber(numberArg);
	    System.out.println("in the main() method number is: " + numberArg);
	    
	    int[] arrayArg = {1,2,3};
	    System.out.println("in the main() method array is: " + arrayArg[0] + " " + arrayArg[1] + " " + arrayArg[2]);
	    printArray(arrayArg);
	    System.out.println("in the main() method array is: " + arrayArg[0] + " " + arrayArg[1] + " " + arrayArg[2]);
	    
	    
	    String strArg = "Hello";
	    System.out.println("in the main() method string is: " + strArg);
	    printString(strArg);
	    System.out.println("in the main() method string is: " + strArg);
	    
	}
	
	public static void printNumber(int numberParam) {

	    numberParam = 5;
	       
	    System.out.println("in printNumber() method, after the "
	                + "modification, numberParam is: " + numberParam);
	}
	
	public static void printString(String strParam) {
		
		strParam = "Test";
		
		System.out.println("in printString() method, after the "
		    		+ "modification, numberParam is: " + strParam);


	}
	
	public static void printArray(int[] arrayParam) {
		
		arrayParam[0] = 9;
		
		System.out.println("in printString() method, after the "
	    		+ "modification, numberParam is: ");
		for(int item : arrayParam)
		{
			System.out.print(item + " ");
		}


	}

}
