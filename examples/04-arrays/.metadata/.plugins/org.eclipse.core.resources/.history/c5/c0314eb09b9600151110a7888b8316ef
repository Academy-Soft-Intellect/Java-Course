
public class FullExample {

	public static void main(String[] args) {
		
		// Деклариране на едномерен масив.
		int[] array1;
		
		// Инициализиране на едномерен масив с дължина от 7 елеменета. 
		// Първоначално пълен с нули.
		array1 = new int[7];
		
		// Добавяне на стойност в масив. Попълване на 3-тия елемент с индекс 2.
		array1[2] = 6;
		
		// Обхождане на масива и извеждане на всички стойности на конзолата/екрана.
		for (int i = 0; i < array1.length; i++) {
			System.out.print(array1[i] + " ");
		}
		System.out.println();
		System.out.println();
		
		// Деклариране и инициализиране на едномерен масив. Първоначално пълен с нули.
		int[] array2 = new int[7];
		
		// Попълване на масив с числа.
		for (int i = 0; i < array2.length; i++) {
			array2[i] = i + 1;
		}
		// Обхождане на масива и извеждане на всички стойности на конзолата/екрана.
		for (int i = 0; i < array1.length; i++) {
			System.out.print(array1[i] + " ");
		}
		System.out.println();
		System.out.println();
		
		// Извеждане дължината на масив
		System.out.println(array2.length);
		System.out.println();
		
		// Деклариране и инициализиране на едномерен масив директно със стойности.
		int[] array3 = {55, 44, 33, 22, 11};
		
		// Обхождане на масива и извеждане на всички стойности на конзолата/екрана чрез foreach.
		for (int number : array3) {
			System.out.print(number + " ");
		} 
		System.out.println();
		System.out.println();
		
		// Инициализиране на двумерен масив от 5 реда и 3 колони. Първоначално пълен с нули.
		int[][] matrix1 = new int[5][3];
		
		// Добавяне на стойност в масив. 
		// Попълване на елемент на 3-тия с индекс 2 и на 2-рата колона с индекс 1.
		matrix1[2][1] = 8;
		
		// Деклариране и инизиализиране на двумерен масив директно със стойности.
		int[][] matrix2 = {{22, 33}, {77, 88}, {99, 11}};
		
		// Обхождане на двумерния масив и извеждане на всички стойности на конзолата/екрана.
		for (int i = 0; i < matrix2.length; i++) {
			for (int j = 0; j < matrix2[i].length; j++) {
				System.out.print(matrix2[i][j] + " ");
			}
			System.out.println();
		}
		System.out.println();
		System.out.println();
		

	}

}
