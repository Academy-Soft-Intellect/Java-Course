public class SchoolTeacher extends Teacher {

	private String[] classes;
	
	public SchoolTeacher() {
		super();
		classes = new String[5];
	}
	
	public SchoolTeacher(String firstName, String lastName, int experienceInYears, String[] classes) {
		super(firstName, lastName, experienceInYears);
		this.classes = classes;
	}
	
	public void classesInfo() {
		System.out.println("Classes:");
		for (int i = 0; i < classes.length; i++) {
			System.out.print("\"" + classes[i] + "\" ");
		}
	}
	
	public void entertain() {
		System.out.println("School teacher: entertain.");
	}
}
