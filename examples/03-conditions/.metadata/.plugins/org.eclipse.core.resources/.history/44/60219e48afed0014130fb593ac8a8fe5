package basics.java;

import java.util.Scanner;

/**
 * Created by Georgi on 11/29/2014.
 */
public class IfElseConstruction {

    public static void main(String[] args) {

        Scanner input = new Scanner(System.in,"UTF-8");

        System.out.println("Моля въведете целочислено число:");
        int numInt = input.nextInt();

        if (numInt % 2 == 0){
            System.out.println("Числото е четно!");
        } else {
            System.out.println("Числото е нечетно!");
        }

        if(numInt > 0 && numInt <=10){
            System.out.println("Числото е в интервала (0;10]");
        } else if (numInt > 10 && numInt < 50){
            System.out.println("Числото е в интервала (10;50)");
        } else if (numInt >= 50 && numInt < 1000 ){
            System.out.println("Числото е в интервала [50;1000)");
        } else {
            System.out.println("Незасечен интервал!");
        }

        if (numInt == 100){
            System.out.println("Числото е равно на 100");
        }


    }
}
