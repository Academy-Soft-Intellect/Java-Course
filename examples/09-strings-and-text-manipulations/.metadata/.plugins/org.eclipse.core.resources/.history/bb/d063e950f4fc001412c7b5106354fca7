package searching;

public class SearchingInStrings {

	public static void main(String[] args) {
		
		//index of
		String javaLang = "Where is Java? Does Java present in the sentance?";
		
		int javaIndex = javaLang.indexOf("Java");
		
		System.out.format("The word: Java is located with index %d \n", javaIndex);
		
		int secondJavaIndex = javaLang.indexOf("Java", javaIndex);
		
		System.out.format("–î—É–º–∞—Ç–∞ Java —?–µ –Ω–∞–º–∏—Ä–∞ –∏ –Ω–∞ %d –∏–Ω–¥–µ–∫—? \n", secondJavaIndex);
		
		//starts with
		
		String example = "Java Programming";
		
		boolean startsWith = example.startsWith("Java");//–ø—Ä–æ–≤–µ—Ä—?–≤–∞ –¥–∞–ª–∏ –Ω–∏–∑–∞ –∑–∞–ø–æ—á–≤–∞ —? Java
		
		System.out.format("–ò–∑—Ä–∞–∑—ä—Ç –∑–∞–ø–æ—á–≤–∞ —? Java: %s \n", startsWith);
		
		//ends with
		
		String coding = "I love coding";
		
		boolean endsWith = coding.endsWith("coding");//–ø—Ä–æ–≤–µ—Ä—?–≤–∞ –¥–∞–ª–∏ –∑–∞–≤—ä—Ä—à–≤–∞ —? coding
		
		System.out.format("–ò–∑—Ä–∞–∑—ä—Ç –∑–∞–≤—ä—Ä—à–≤–∞ —? coding: %s \n", endsWith);
		
		//contains
		 
		String oop = "Java is object oriented language";
		
		boolean contains = oop.contains("object");//–ø—Ä–æ–≤–µ—Ä—?–≤–∞ –¥–∞–ª–∏ —?—ä–¥—ä—Ä–∂–∞ object
		
		System.out.format("–ò–∑—Ä–∞–∑—ä—Ç —?—ä–¥—ä—Ä–∂–∞ object: %s \n", contains);
		
		
		

	}

}
