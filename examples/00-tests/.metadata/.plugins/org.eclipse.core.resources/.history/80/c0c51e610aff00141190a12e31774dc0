package homework6;

public class Assistant extends Lecturer {
	
	private boolean chief;
	
	public Assistant() {
		super();
	}
	
	public Assistant(String name, String lastName, int yearsOfWork, boolean chief) {
		super(name, lastName, yearsOfWork);
		this.chief = chief;
	}

	public void info() {
		System.out.println("Name: " + this.getName() + " " + this.getLastName());
		System.out.println("Chief assistant: " + chief);
	}
	
	public void writeArticle() {
		System.out.println("Assistant: writing article.");
	}
	
	public void checkHomework() {
		System.out.println("Assistant: checking homework.");
	}
	
	public void checkExam() {
		System.out.println("Assistant: checking exam.");
	}
}
