
public class Break {
	public static void main(String[] args) {
		
		//Алгоритъм за намиране на най-малко общо частно
		
		int number = 3;
		int divider = 5;
		int curent_number = 1;
		
		do{
			int result = number * curent_number++;
			
			if(result % divider == 0){
				System.out.printf("Най-малкото общо (НОК) частно на %d и %d е %d", number, divider, result);
				System.out.println();
				break;
			}
		
		} while(true);

	}
}
